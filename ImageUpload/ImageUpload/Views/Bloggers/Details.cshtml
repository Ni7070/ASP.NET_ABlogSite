@model ImageUpload.Blogger

@{
    ViewBag.Title = "Details";
}
<style>

    * {
        box-sizing: border-box;
    }

    /* Add a gray background color with some padding */
    body {
        font-family: Arial;
        padding: 20px;
        background: #f1f1f1;
    }

    /* Header/Blog Title */
    .header {
        padding: 30px;
        font-size: 40px;
        text-align: center;
        background: white;
        width: 100%;
    }

    /* Create two unequal columns that floats next to each other */
    /* Left column */
    .leftcolumn {
        float: left;
        width: 75%;
    }

    /* Right column */
    .rightcolumn {
        float: left;
        width: 25%;
        padding-left: 20px;
    }

    /* Fake image */
    .fakeimg {
        background-color: #aaa;
        width: 100%;
        padding: 20px;
    }

    /* Add a card effect for articles */
    .card {
        background-color: white;
        padding: 20px;
        margin-top: 20px;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    /* Footer */
    .footer {
        padding: 20px;
        text-align: center;
        background: #ddd;
        margin-top: 20px;
    }
</style>
@*<h2>Details</h2>*@

<div class="container1">

    <div class="header" style="margin-top:50px">
        @Html.DisplayFor(model => model.Title)
        <h3>@Html.DisplayNameFor(model => model.Category) :@Html.DisplayFor(model => model.Category)</h3>
        <h5>Posted On:@Html.DisplayFor(model => model.Date)</h5>
    </div>

    <div class="row">
        <div class="leftcolumn">
            <div class="card">



                @*<div class="fakeimg" style="height:200px;">Image</div>*@
                <p> <img src="@Url.Content(Model.ImagePath)" alt="Image" height="500" width="840" /></p>
                <div class="post" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;font-size:larger">
                    <p>@Html.DisplayFor(model => model.Post)</p>
                </div>

            </div>

        </div>
        <div class="rightcolumn">

            <div class="card">
                <h3>Popular Post</h3>
                <div class="fakeimg">Image</div><br>
                <div class="fakeimg">Image</div><br>
                <div class="fakeimg">Image</div>
            </div>
            <br />
            <br />

            <button style="height:50px;width:100px;margin-left:15px">@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) </button>

            <button style="height:50px;width:150px">@Html.ActionLink("Back to List", "Index")</button>
        </div>


    </div>

</div>

